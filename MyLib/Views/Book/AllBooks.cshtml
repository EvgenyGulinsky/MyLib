@using MyLib.Models;
@{
    ViewBag.Title = "AllBooks";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Книжная база</h2>

<table class="table">
    <tr>
        <th>
            Название
        </th>
        <th>
            Автор
        </th>
        <th>
            Краткое описание
        </th>
        <th></th>
    </tr>
    @if (ViewBag.Books == null)
    { <h2 style="color:dodgerblue">В базе пока нет ни одной книги</h2> }
@foreach (Book book in ViewBag.Books) {
    <tr>
        <td>
            @book.Name
        </td>
        <td>
            @book.Author
        </td>
        <td>
            @book.Description
        </td>
        <td>
            <!--
            @Html.ActionLink("Edit", "Edit", new { id=book.BookId }) |
            @Html.ActionLink("Details", "Details", new { id=book.BookId }) |
            @Html.ActionLink("Delete", "Delete", new { id=book.BookId })-->
        </td>
    </tr>
}

</table>
